# Supabase Configuration
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# Telegram Bot Configuration
VITE_TELEGRAM_BOT_TOKEN=your_telegram_bot_token

# Perplexity AI Configuration
VITE_PERPLEXITY_API_KEY=your_perplexity_api_key

# Application Configuration
VITE_APP_NAME=EduBot CMS
VITE_APP_URL=https://edubot-cms.com
VITE_APP_ENV=development # development, staging, production
VITE_APP_VERSION=0.1.0

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_PWA=true
VITE_ENABLE_CHAT=true

# API Rate Limits (requests per minute)
VITE_API_RATE_LIMIT=60
VITE_PERPLEXITY_RATE_LIMIT=10

# Content Delivery Settings
VITE_MAX_DAILY_MESSAGES=100
VITE_MAX_FILE_SIZE=100000000 # 100MB in bytes
VITE_ALLOWED_FILE_TYPES=video/mp4,video/webm,video/quicktime

# Cache Settings
VITE_CACHE_DURATION=3600 # 1 hour in seconds

# Debug Settings (only enable in development)
VITE_DEBUG_MODE=false
VITE_DEBUG_TELEGRAM=false
VITE_DEBUG_PERPLEXITY=false

# Security Settings
VITE_ENABLE_CSRF=true
VITE_SECURE_COOKIES=true
VITE_CORS_ORIGIN=http://localhost:5173
